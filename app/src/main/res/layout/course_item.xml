<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardBackgroundColor="@color/white"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_module_title"
            style="@style/CategoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/module1"
            app:layout_constraintStart_toStartOf="@+id/tv_module_description"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_module_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#7D3F3F"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:text="@string/course1_module1_description"
            app:layout_constraintBottom_toTopOf="@+id/tv_lesson_link"
            app:layout_constraintEnd_toStartOf="@+id/course_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_module_title" />

        <ImageView
            android:id="@+id/course_image"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_course1_module1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lesson_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Перейти к урокам"
            android:textColor="#FF834E"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_module_description" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="@+id/tv_lesson_link"
            app:layout_constraintStart_toEndOf="@+id/tv_lesson_link"
            app:layout_constraintTop_toTopOf="@+id/tv_lesson_link" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>